{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    // "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    // "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules", "dist"]
}
